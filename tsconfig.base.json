{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular/*": ["./node_modules/@angular/*"],
      "@app/*": ["src/app/*"],
      "@dom/components": ["libs/src/lib/dom/components/index.ts"],
      "@dom/directives": ["libs/src/lib/dom/directives/index.ts"],
      "@dom/helpers": ["libs/src/lib/dom/helpers/index.ts"],
      "@dom/components/card-button": [
        "libs/src/lib/dom/components/card-button/card-button.component.ts"
      ],
      "@dom/components/divider-header": [
        "libs/src/lib/dom/components/divider-header/divider-header.component"
      ],
      "@dom/components/flip-container": [
        "libs/src/lib/dom/components/flip-container/flip-container.component"
      ],
      "@dom/components/floating-button": [
        "libs/src/lib/dom/components/floating-button/floating-button.component"
      ],
      "@dom/components/info-card": [
        "libs/src/lib/dom/components/info-card/info-card.component"
      ],
      "@dom/components/form/inputs/form-search-input": [
        "libs/src/lib/dom/components/form/inputs/form-search-input/search-input.component.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
